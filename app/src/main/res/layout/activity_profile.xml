<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    android:gravity="center"
    android:background="@color/background"
    tools:context=".ProfileActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/logo"
        android:layout_marginBottom="0dp"
        android:scaleType="fitCenter"
        android:contentDescription="@string/logo"
        />

    <TextView
        android:id="@+id/user_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Information"
        android:textSize="30sp"
        android:textColor="#016A70"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceLarge"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/user_name_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name: "
            android:textSize="20sp"
            android:textColor="@color/main"
            android:layout_marginTop="35dp"
            android:textStyle="bold"

            />
    <TextView
        android:id="@+id/u_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/demo_name"
        android:textSize="20sp"
        android:textColor="@color/main"
        android:layout_marginTop="35dp"
        android:textStyle="bold"
        android:textColorHighlight="@color/hover_over_main"

        />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
       >
        <TextView
            android:id="@+id/user_email_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email: "
            android:textSize="20sp"
            android:textColor="@color/main"
            android:layout_marginTop="30dp"
            android:textStyle="bold"

            />
        <TextView
            android:id="@+id/u_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/demo_email"
            android:textSize="20sp"
            android:textColor="@color/main"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:textColorHighlight="@color/hover_over_main"

            />
    </LinearLayout>


</LinearLayout>