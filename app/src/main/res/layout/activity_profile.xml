<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    android:gravity="center"
    android:background="@color/background"
    tools:context=".ProfileActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/logo"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="5dp"
        android:scaleType="fitCenter"
        android:contentDescription="@string/logo"
        />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="#016A70"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceLarge"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="start"
        android:layout_marginStart="20dp"
        >
        <TextView
            android:id="@+id/user_name_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name"
            android:textSize="15sp"
            android:textColor="@color/main"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="5dp"
            android:textStyle="bold"

            />
    <TextView
        android:id="@+id/u_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/main"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textColorHighlight="@color/hover_over_main"
        />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="start"
        android:layout_marginStart="20dp"
       >
        <TextView
            android:id="@+id/user_email_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/email"
            android:textSize="15sp"
            android:textColor="@color/main"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/u_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/main"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textColorHighlight="@color/hover_over_main"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="start"
        android:layout_marginStart="20dp"
        >
        <TextView
            android:id="@+id/user_phone_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/phone"
            android:textSize="15sp"
            android:textColor="@color/main"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/u_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/main"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textColorHighlight="@color/hover_over_main"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="start"
        android:layout_marginStart="20dp"
        >
        <TextView
            android:id="@+id/user_birth_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/birth"
            android:textSize="15sp"
            android:textColor="@color/main"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/u_birth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/main"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textColorHighlight="@color/hover_over_main"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="start"
        android:layout_marginStart="20dp"
        >
        <TextView
            android:id="@+id/user_profession_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/prof"
            android:textSize="15sp"
            android:textColor="@color/main"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/u_profession"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/main"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textColorHighlight="@color/hover_over_main"
            />
    </LinearLayout>

    <Button
        android:id="@+id/rateId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/rate_us"
        android:background="@color/button"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textAlignment="center"
        />

    <Button
        android:id="@+id/signout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/signout"
        android:background="@color/button"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textAlignment="center"
        />


</LinearLayout>